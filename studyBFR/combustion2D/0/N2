FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      O2;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 0 0 0 0];

internalField   uniform 0.766;

boundaryField
{
    /*
    inlet
    {
        type            fixedValue;
        value           uniform 0.0551;
    }*/

    inlet
    {
        type            groovyBC;
        variables (
            "cFactor=1;"
            "distSquare=pos().y*pos().y+pos().z*pos().z;"
            "distR=pow(distSquare,0.5);"	
            "mf1=(distR<0.015) ? 0 : 0;"
            "mf2=(distR >= 0.015 && distR < 0.025) ? 0 : 0;"
            "mf3=(distR >= 0.025) ? 0.766 : 0;"
            "mfNet=cFactor*(mf1+mf2+mf3);"
        );
        value uniform 0.766;
        valueExpression "mfNet";
    }

    outlet
    {
        type            zeroGradient;
    }
    
    fixedWalls
    {
        type            zeroGradient;
    }
    
    bottom
    {
        type            symmetryPlane;
    }
    
    frontAndBack
    {
        type            empty;
    }
}


