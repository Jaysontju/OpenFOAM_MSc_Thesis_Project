FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "20";
    object      a;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 -1 0 0 0 0 0];

internalField   uniform 0.5;

boundaryField
{
    inlet
    {
        type            calculated;
        value           uniform 0.5;
    }
    outlet
    {
        type            calculated;
        value           uniform 0.5;
    }
    fixedWalls
    {
        type            calculated;
        value           uniform 0.5;
    }
    frontAndBack
    {
        type            empty;
    }
    bottom
    {
        type            empty;
    }
    frontAndBack_pos
    {
        type            wedge;
    }
    frontAndBack_neg
    {
        type            wedge;
    }
}


