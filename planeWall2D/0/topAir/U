FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0/topAir";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [ 0 1 -1 0 0 0 0 ];

internalField   uniform ( 0.1 0 0 );

boundaryField
{
    topAir_top
    {
        type            symmetryPlane;
        value           uniform ( 0 0 0 );
    }
    leftLet
    {
        type            fixedValue;
        value           uniform ( 0.1 0 0 );
    }
    rightLet
    {
        type            inletOutlet;
        value           uniform ( 0.1 0 0 );
        inletValue      uniform ( 0 0 0 );
    }
    frontAndBack
    {
        type            empty;
    }
    topAir_to_wall
    {
        type            fixedValue;
        value           uniform ( 0 0 0 );
    }
}


