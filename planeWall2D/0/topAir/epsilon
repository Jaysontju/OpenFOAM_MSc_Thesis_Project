FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0/topAir";
    object      epsilon;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [ 0 2 -3 0 0 0 0 ];

internalField   uniform 0.01;

boundaryField
{
    topAir_top
    {
        type            symmetryPlane;
        value           uniform 0;
    }
    leftLet
    {
        type            inletOutlet;
        value           uniform 0.01;
        inletValue      uniform 0.01;
    }
    rightLet
    {
        type            fixedValue;
        value           uniform 0.01;
    }
    frontAndBack
    {
        type            empty;
    }
    topAir_to_wall
    {
        type            compressible::epsilonWallFunction;
        value           uniform 0.01;
    }
}


